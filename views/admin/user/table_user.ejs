<div class="card shadow mb-4">
    <div class="card-header py-3">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
        <i class="fas fa-plus"></i>
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
                <th>No</th>
              <th>Username</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < users.length; i++) { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= users[i].username %></td>
                <td>
                    <% if(users[i].username === user.username) { %>
                        <form action="/admin/user/<%= users[i].id%>?_method=DELETE" method="POST">
                        <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-update" data-id="<%= users[i]._id %>" data-username="<%= users[i].username %>"><i class="fas fa-edit"></i></a>
                        <% if(user.username == "admin") { %>
                            <% if(users[i].username != "admin") { %>
                                <button type="submit" href="" class="btn btn-danger btn-sm btn-circle"><i class="fas fa-trash"></i></button>
                            <% } %>
                        <% } %>
                        </form>
                    <% } else if(user.username === "admin") { %>
                        <form action="/admin/user/<%= users[i].id%>?_method=DELETE" method="POST">
                        <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-update" data-id="<%= users[i]._id %>" data-username="<%= users[i].username %>"><i class="fas fa-edit"></i></a>
                        <% if(user.username == "admin") { %>
                            <% if(users[i].username != "admin") { %>
                                <button type="submit" href="" class="btn btn-danger btn-sm btn-circle"><i class="fas fa-trash"></i></button>
                            <% } %>
                        <% } %>
                        </form>
                    <% } %>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>